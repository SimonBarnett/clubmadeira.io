{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DiscountCategories",
    "description": "Schema for discount club categories with 4-7 main categories and 3-7 subcategories each",
    "type": "object",
    "additionalProperties": false,
    "patternProperties": {
      "^[A-Za-z0-9 -]+$": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^[A-Za-z0-9 -]+$"
        },
        "minItems": 3,
        "maxItems": 7
      }
    },
    "minProperties": 4,
    "maxProperties": 7
  }